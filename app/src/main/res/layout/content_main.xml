<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/activity_horizontal_spacing"
        android:paddingVertical="@dimen/activity_vertical_spacing">

        <androidx.cardview.widget.CardView
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/content_vertical_spacing"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:contentDescription="@string/film_cover"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dogs" />

                <TextView
                    android:id="@+id/f001_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/dogs_name_film"
                    android:textAppearance="@style/MainTextHeading" />

                <com.google.android.material.button.MaterialButton
                    style="@style/ButtonStyle"
                    android:id="@+id/f001"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:onClick="showDetails"
                    android:text="@string/details" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/content_vertical_spacing"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:contentDescription="@string/film_cover"
                    android:scaleType="centerCrop"
                    android:src="@drawable/buy_me" />

                <TextView
                    android:id="@+id/f002_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/buy_me_name_film"
                    android:textAppearance="@style/MainTextHeading" />

                <com.google.android.material.button.MaterialButton
                    style="@style/ButtonStyle"
                    android:id="@+id/f002"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:onClick="showDetails"
                    android:text="@string/details" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/content_vertical_spacing"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:contentDescription="@string/film_cover"
                    android:scaleType="centerCrop"
                    android:src="@drawable/last_jedi" />

                <TextView
                    android:id="@+id/f003_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/last_jedi_name_film"
                    android:textAppearance="@style/MainTextHeading" />

                <com.google.android.material.button.MaterialButton
                    style="@style/ButtonStyle"
                    android:id="@+id/f003"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:onClick="showDetails"
                    android:text="@string/details" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>