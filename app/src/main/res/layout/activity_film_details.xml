<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.FilmDetailsActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:theme="@style/AppTheme.AppBarOverlay"
        style="@style/AppTheme.PopupOverlay"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/film_details" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        tools:ignore="UseCompoundDrawables"
        android:layout_marginHorizontal="20dp">

        <ImageView
            android:id="@+id/film_cover"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:contentDescription="@string/film_cover"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/film_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:textSize="30sp"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>

    <TextView
        android:id="@+id/film_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginHorizontal="20dp" />

    <LinearLayout
        android:paddingVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:visibility="gone"
        android:layout_marginHorizontal="20dp">

        <EditText
            android:inputType="text"
            android:id="@+id/film_comment"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:lines="5"
            android:hint="@string/comment_film"
            tools:ignore="Autofill" />

        <CheckBox
            android:id="@+id/film_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>


